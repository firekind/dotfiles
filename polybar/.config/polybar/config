[bar/top]
	monitor = ${env:MONITOR:}
	width = 100%
	;width = 30%
	height = 27
	;radius = 0
	radius = 7
	fixed-center = true
	;bottom=true

	background = ${xrdb:color0}
	foreground = ${xrdb:color7}

	;line-size = 3
	line-size = 0
	;line-color =

	border-size = 8
	border-color = #00ffffff

	padding-left = 0
	padding-right = 1

	module-margin-left = 1
	module-margin-right = 2

	font-0 = "Source Code Pro Semibold:pixelsize=11;1"
	font-1 = "Font Awesome 5 Pro:style=Solid:pixelsize=13;3.5"
	font-2 = "Font Awesome 5 Brands:pixelsize=10;1"

	modules-left = i3
	modules-center = date
	modules-right = weather eth wlan battery

	;tray-position = none
	;tray-padding = 2
	;tray-maxsize = 24
	;tray-detached = false
	;tray-transparent = false
	;tray-scale = 1.0

	;override-redirect = true
	;wm-restach = i3
	;offset-x = 670
	;offset-y = 2
	padding = 0
 
	cursor-click = pointer
	cursor-scroll = ns-resize
	enable-ipc = true

[module/i3]
	type = internal/i3
	format = <label-state> <label-mode>
	index-sort = true
	wrapping-scroll = false

	label-mode-padding = 2
	;label-mode-foreground = ${xrdb:color0}
	;label-mode-background = ${xrdb:color4}

	label-focused = %index%
	label-focused-background = ${xrdb:color8}
	label-focused-foreground = ${xrdb:color0} 
	label-focused-padding = 2

	label-unfocused = %index%
	;label-unfocused-background = ${xrdb:color4}
	label-unfocused-foreground = ${xrdb:color7} 
	label-unfocused-padding = 2

	label-visible = %index%
	;label-visible-background = ${xrdb:color4}
	;label-visible-foreground = ${xrdb:color0}
	label-visible-padding = 2

	label-urgent = %index%
	label-urgent-background = #BA2922
	label-urgent-padding = 2

[module/battery]
	type = internal/battery
	battery = BAT0
	adapter = ADP1
	full-at = 100

	format-foreground = ${xrdb:color0}
	format-background = ${xrdb:color5}

	format-charging = <animation-charging> <label-charging>
	format-discharging = <ramp-capacity> <label-discharging>
	label-full =  %percentage%
	
	;format-charging = <animation-charging>
	;format-discharging = <ramp-capacity>
	;label-full = 
	
	ramp-capacity-0 = "%{A1:~/.config/polybar/scripts/info -b:}%{A}"
	ramp-capacity-1 = "%{A1:~/.config/polybar/scripts/info -b:}%{A}"
	ramp-capacity-2 = "%{A1:~/.config/polybar/scripts/info -b:}%{A}"
	ramp-capacity-3 = "%{A1:~/.config/polybar/scripts/info -b:}%{A}"
	ramp-capacity-4 = "%{A1:~/.config/polybar/scripts/info -b:}%{A}"

	animation-charging-0 = "%{A1:~/.config/polybar/scripts/info -b:}%{A}"
	animation-charging-1 = "%{A1:~/.config/polybar/scripts/info -b:}%{A}"
	animation-charging-2 = "%{A1:~/.config/polybar/scripts/info -b:}%{A}"
	animation-charging-3 = "%{A1:~/.config/polybar/scripts/info -b:}%{A}"
	animation-charging-4 = "%{A1:~/.config/polybar/scripts/info -b:}%{A}"
	animation-charging-framerate = 650

[module/wlan]
	type = internal/network
	interface = wlo1
	interval = 3.0

	;format-connected = <ramp-signal> <label-connected>
	format-connected = <label-connected><ramp-signal>
	format-connected-foreground = ${xrdb:color7}
	format-connected-background = ${xrdb:color0}
	format-connected-padding = 0
	;label-connected = %essid%
	label-connected = "%{A1:~/.config/polybar/scripts/info -w:}%{A}"

	format-disconnected = <label-disconnected>
	;label-disconnected =  
	label-disconnected =  
	;ramp-signal-0 = "%{A1:~/.config/polybar/scripts/info -w:}%{A}"
	;ramp-signal-1 = "%{A1:~/.config/polybar/scripts/info -w:}%{A}"
	;ramp-signal-2 = "%{A1:~/.config/polybar/scripts/info -w:}%{A}"
	;ramp-signal-3 = "%{A1:~/.config/polybar/scripts/info -w:}%{A}" 
	;ramp-signal-4 = "%{A1:~/.config/polybar/scripts/info -w:}%{A}"
	ramp-signal-0 = "%{A1:~/.config/polybar/scripts/info -w:}%{A}"
	ramp-signal-1 = "%{A1:~/.config/polybar/scripts/info -w:}%{A}"
	ramp-signal-2 = "%{A1:~/.config/polybar/scripts/info -w:}%{A}"
	ramp-signal-3 = "%{A1:~/.config/polybar/scripts/info -w:}%{A}" 
