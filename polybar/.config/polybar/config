	format-disconnected =

[module/date]
	type = internal/date
	interval = 5

	time = %I:%M %p%
	time-alt = "%{A1:~/.config/polybar/scripts/dzen-calendar:}%I:%M %p%{A}"
	
	format-prefix = 
	;format-foreground = ${xrdb:color0}
	;format-background = ${xrdb:color5}
	format-padding = -1

	label = %date% %time%

[module/weather]
	type = custom/script
	exec = /opt/miniconda3/bin/python ~/.config/polybar/scripts/weather.py
	;click-left = /opt/miniconda3/bin/python ~/.config/polybar/scripts/weather.py
	label = %output%
	interval = 60

