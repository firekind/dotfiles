{
    "ppa": [
        "ppa:hvr/ghc",
        "ppa:aslatter/ppa",
        "ppa:justinabrahms/ttf-cascadia-code",
        "ppa:papirus/papirus",
        "ppa:codejamninja/jam-os",
        "ppa:tista/adapta"
    ],

    "post-ppa-commands": [
        "wget -qO- https://packages.microsoft.com/keys/microsoft.asc | gpg --dearmor > packages.microsoft.gpg",
        "sudo install -o root -g root -m 644 packages.microsoft.gpg /etc/apt/trusted.gpg.d/",
        "sudo sh -c 'echo \"deb [arch=amd64,arm64,armhf signed-by=/etc/apt/trusted.gpg.d/packages.microsoft.gpg] https://packages.microsoft.com/repos/code stable main\" > /etc/apt/sources.list.d/vscode.list'"
    ],

    "uninstall": [
        "grep:gnome"
    ],
    
    "install": [
        "ghc-8.8.4",
        "cabal-install-3.4",
        "compton",
        "nitrogen",
        "python3-pip",
        "alacritty",
        "ttf-cascadia-code",
        "qt5-style-kvantum",
        "qt5-style-kvantum-themes",
        "qt5ct",
        "pcmanfm-qt",
        "papirus-icon-theme",
        "fonts-cantarell",
        "lxappearance",
        "adapta-gtk-theme",
        "apt-transport-https",
        "xdotool",
        "libglib2.0-dev",
        "libdbus-1-dev",
        "gir1.2-nm-1.0",
        "libnm-util-dev",
        "papirus-folders",
        "stow",
        "dunst",
        "neovim",
        "curl",
        "zsh",
        "zsh-syntax-highlighting",
        "rofi",
        "lightdm",
        "i3lock-color"
    ],
    "post-install": [
        "sudo apt install code",
        "sudo pip3 install pywal notify-send.py",
        "sudo apt install software-properties-common",
        "sudo apt purge gnome-control-center gnome-bluetooth yelp gnome-terminal gnome-settings-daemon gnome-control-center gnome-menus gnome-online-accounts gnome-screensaver xterm",
        "sudo apt purge --autoremove",
        "echo 'deb http://download.opensuse.org/repositories/shells:/zsh-users:/zsh-autosuggestions/xUbuntu_18.04/ /' | sudo tee /etc/apt/sources.list.d/shells:zsh-users:zsh-autosuggestions.list",
        "curl -fsSL https://download.opensuse.org/repositories/shells:zsh-users:zsh-autosuggestions/xUbuntu_18.04/Release.key | gpg --dearmor | sudo tee /etc/apt/trusted.gpg.d/shells_zsh-users_zsh-autosuggestions.gpg > /dev/null",
        "sudo apt update",
        "sudo apt install libx11-dev libxrandr-dev libxss-dev libxft-dev libasound-dev c2hs libxpm-dev",
        "sudo mkdir -p /usr/share/fonts/custom",
        "sudo cp res/fonts/*.* /usr/share/fonts/custom",
        "fc-cache -f -v",
        "mkdir -p ~/Pictures/Wallpapers",
        "cp -a res/wallpapers/ ~/Pictures/Wallpapers",
        "sudo dpkg-reconfigure lightdm"
    ],
    "dotfiles": [
        "alacritty",
        "dunst",
        "neovim",
        "networkmanager-dmenu",
        "pcmanfm-context-menu",
        "rofi",
        "scripts",
        "starship",
        "wal",
        "xmobar",
        "xmonad",
        "zsh"
    ],
    "backup_dir": "backups",
    "backup": {}

}
