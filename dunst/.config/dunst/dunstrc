[global]
    geometry = "300x10-10+38"

    # Show multiple notifications in the same box
    separator_height = 3
    separator_color = auto

    # Add vertical padding to the inside of the notification
    padding = 10

    # Add horizontal padding for when the text gets long enough
    horizontal_padding = 10

    # The frame color and width of the notification
    frame_color = "#1F6E8B"
    frame_width = 0

    # How long a user needs to be idle for sticky notifications
    idle_threshold = 120

    # Font and typography settings
    font = Source Code Pro Semibold 10
    alignment = left
    word_wrap = yes
    sort = yes

    # Format for how notifications will be displayed
    # Usage: `notify-send 'Title' 'Summary'`
    format = "%s\n%b"

    # Allow some HTML tags like <i> and <u> in notifications
    markup = full

    indicate_hidden = yes
    bounce_freq = 0
    show_age_threshold = 60
    ignore_newline = no
    transparency = 0
    monitor = 0
    follow = mouse
    sticky_history = yes
    line_height = 5
    startup_notification = false
    show_indicators = yes
    hide_duplicate_count = true
    dmenu = rofi -show drun
    browser = firefox
    icon_position = left
    #icon_path = /usr/share/icons/Papirus/32x32/status/
    #show_icons = left
    max_icon_size = 32
    

# These are the keybindings used to control dunst notifications
[shortcuts]
    close = ctrl+space
    close_all = ctrl+shift+space
    context = ctrl+shift+period
    history = ctrl+shift+grave

# Set the background and foreground (text) color for all notifications
[urgency_low]
    background = "#000000"
    foreground = "#ffffff"
    timeout = 5

[urgency_normal]
    background = "#000000"
    foreground = "#ffffff"
    timeout = 5

[urgency_critical]
    background = "#000000"
    foreground = "#ff0000"
    timeout = 5
